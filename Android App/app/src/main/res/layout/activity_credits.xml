<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:id="@+id/homeLayout"
    tools:context=".Credits">

    <TextView
        android:id="@+id/text_credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This App was created as a result visualization tool for the project Intelligent Athlete of the exam Model Identification and Data Analysis at Politecnico di Milano. The creator is Michele Russo and the other students that worked on the project are Francesco Rettore and Luca Benedetti. The supervisors are professor Sergio Savaresi, professor Mara Tanelli and engineer Marco Centurioni."
        android:textAlignment="center"
        android:textColor="@color/blazingYellow"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>